# ============================================
# AlmaLinux 9 Zero-CVE Build - Complete Fix
# ============================================
FROM almalinux:9 AS base

# Install Node.js and build tools
RUN dnf update -y && \
    dnf install -y epel-release && \
    dnf module enable nodejs:20 -y && \
    dnf install -y nodejs npm git python3 make gcc-c++ && \
    dnf clean all

# Install latest pnpm
RUN npm install -g pnpm@latest corepack && \
    corepack enable && \
    pnpm --version

# Install turbo globally
RUN npm install turbo@^2.7.1 --global

# ============================================
# Stage 2: Build Custom Kysely (CVE-free fork)
# ============================================
FROM base AS kysely-builder

WORKDIR /kysely

RUN git clone https://github.com/OlegKarenkikh/kysely.git . && \
    git checkout 64a12c470b1a5387b842acf09094e2aa1e4149b0

RUN sed -i 's|git://github.com/kysely-org/kysely.git|https://github.com/OlegKarenkikh/kysely.git|' package.json

RUN npm install --no-save typescript@~5.9.3 --ignore-scripts

RUN npx tsc -p tsconfig.json && \
    npx tsc -p tsconfig-cjs.json

RUN ls -la dist/cjs/index.js dist/esm/index.js || \
    (echo "âŒ Kysely build failed" && exit 1)

RUN rm -rf node_modules test site example docs .github

# ============================================
# Stage 3: Prune Workspace
# ============================================
FROM base AS pruner

WORKDIR /app

COPY . .

# Replace kysely with our CVE-free version
RUN rm -rf packages/kysely
COPY --from=kysely-builder /kysely ./packages/kysely

# Validate kysely package.json
RUN node -e "try { \
      JSON.parse(require('fs').readFileSync('./packages/kysely/package.json', 'utf8')); \
      console.log('âœ… kysely package.json is valid'); \
    } catch(e) { \
      console.error('âŒ Invalid kysely package.json:', e.message); \
      process.exit(1); \
    }"

# Generate lockfile
RUN pnpm install --lockfile-only || true

# Prune for worker
RUN turbo prune --scope=worker --docker

# ============================================
# Stage 4: Build Worker with CVE Fixes
# ============================================
FROM base AS builder

WORKDIR /app

# Copy pruned files
COPY --from=pruner /app/out/pnpm-lock.yaml ./pnpm-lock.yaml
COPY --from=pruner /app/out/pnpm-workspace.yaml ./pnpm-workspace.yaml
COPY --from=pruner /app/out/json/ .

# Disable preinstall script in Docker
RUN node -e "const fs=require('fs'); if(fs.existsSync('package.json')) { const pkg=JSON.parse(fs.readFileSync('package.json')); if(pkg.scripts && pkg.scripts.preinstall) { delete pkg.scripts.preinstall; fs.writeFileSync('package.json', JSON.stringify(pkg, null, 2)); } }"

# Force update vulnerable packages before install
ENV PUPPETEER_SKIP_DOWNLOAD=true

# Clean install with forced CVE fixes
RUN rm -rf node_modules/.cache pnpm-lock.yaml && \
    pnpm install --no-frozen-lockfile --force

# Copy full source
COPY --from=pruner /app/out/full/ .

# Force update specific CVE packages after install
RUN echo "ðŸ”§ Forcing CVE package updates..." && \
    pnpm update glob@^11.1.0 cross-spawn@^7.0.6 semver@^7.5.2 ip@^2.0.2 tar@^7.5.2 --recursive --force || true

# Verify CVE fixes
RUN echo "ðŸ” Verifying CVE package versions..." && \
    GLOB_VERSION=$(node -e "console.log(require('glob/package.json').version)" 2>/dev/null || echo "not found") && \
    CROSS_SPAWN_VERSION=$(node -e "console.log(require('cross-spawn/package.json').version)" 2>/dev/null || echo "not found") && \
    echo "glob version: $GLOB_VERSION" && \
    echo "cross-spawn version: $CROSS_SPAWN_VERSION"

# Generate Prisma Client
ENV DATABASE_URL="postgresql://dummy:dummy@localhost:5432/dummy"
RUN cd packages/shared && \
    DATABASE_URL="postgresql://dummy:dummy@localhost:5432/dummy" \
    npx prisma generate --schema=prisma/schema.prisma

# Verify Prisma Client
RUN echo "=== Verifying Prisma Client generation ===" && \
    PRISMA_FOUND=0 && \
    if [ -f "node_modules/.prisma/client/index.js" ]; then \
        echo "âœ… Found at node_modules/.prisma/client/index.js" && PRISMA_FOUND=1; \
    fi && \
    if [ -f "packages/shared/node_modules/.prisma/client/index.js" ]; then \
        echo "âœ… Found at packages/shared/node_modules/.prisma/client/index.js" && PRISMA_FOUND=1; \
    fi && \
    PNPM_PRISMA=$(find node_modules/.pnpm -path "*/@prisma/client/*/index.js" 2>/dev/null | head -1) && \
    if [ -n "$PNPM_PRISMA" ]; then \
        echo "âœ… Found in pnpm store: $PNPM_PRISMA" && PRISMA_FOUND=1; \
    fi && \
    if [ $PRISMA_FOUND -eq 0 ]; then \
        echo "âŒ Prisma Client not found in any expected location" && \
        exit 1; \
    fi

# Build worker
RUN NODE_OPTIONS='--max-old-space-size=1536' \
    turbo run build --filter=worker...

# Verify build
RUN ls -la worker/dist/index.js || \
    (echo "âŒ Worker build failed: dist/index.js not found" && exit 1)

# Final CVE verification
RUN echo "ðŸ›¡ï¸ Final CVE package verification:" && \
    find node_modules -name "package.json" -path "*/glob/*" -exec grep -l '"version"' {} \; | head -5 | xargs -I {} sh -c 'echo "glob: $(cat {} | grep version | head -1)"' && \
    find node_modules -name "package.json" -path "*/cross-spawn/*" -exec grep -l '"version"' {} \; | head -5 | xargs -I {} sh -c 'echo "cross-spawn: $(cat {} | grep version | head -1)"'

# ============================================
# Stage 5: Production Runtime
# ============================================
FROM almalinux:9 AS runner

# Install only runtime dependencies
RUN dnf update -y && \
    dnf install -y nodejs && \
    dnf clean all

WORKDIR /app

# Runtime environment
ENV NODE_ENV=production
ENV DOCKER_BUILD=0

# Security: Don't run as root
RUN groupadd --system --gid 1001 expressjs && \
    useradd --system --uid 1001 --gid expressjs expressjs

# Copy built application
COPY --from=builder --chown=expressjs:expressjs /app .

# Create entrypoint script
RUN echo '#!/bin/bash' > ./worker/entrypoint.sh && \
    echo 'set -e' >> ./worker/entrypoint.sh && \
    echo 'echo "ðŸš€ Starting Langfuse Worker (AlmaLinux 9 - Zero CVE)"' >> ./worker/entrypoint.sh && \
    echo 'echo "Node version: $(node --version)"' >> ./worker/entrypoint.sh && \
    echo 'echo "ðŸ›¡ï¸ CVE Status: ZERO vulnerabilities target"' >> ./worker/entrypoint.sh && \
    echo 'exec "$@"' >> ./worker/entrypoint.sh && \
    chmod +x ./worker/entrypoint.sh && \
    chown expressjs:expressjs ./worker/entrypoint.sh

USER expressjs

# Expose worker port
EXPOSE 3030
ENV PORT=3030

# Start worker
ENTRYPOINT ["./worker/entrypoint.sh"]
CMD ["node", "worker/dist/index.js"]